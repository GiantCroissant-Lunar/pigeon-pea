<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <!-- Core Plugin Contracts -->
    <ProjectReference Include="..\..\..\app-essential\core\PigeonPea.Contracts\PigeonPea.Contracts.csproj" />

    <!-- Game Contracts for IRenderer -->
    <ProjectReference Include="..\..\..\game-essential\core\PigeonPea.Game.Contracts\PigeonPea.Game.Contracts.csproj" />

    <!-- Logging -->
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="9.0.0" />
  </ItemGroup>

  <ItemGroup>
    <!-- Copy plugin.json to output directory -->
    <None Include="plugin.json" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <!-- Post-build: Copy plugin to console app's plugins directory -->
  <Target Name="CopyPluginToConsoleApp" AfterTargets="Build">
    <PropertyGroup>
      <PluginOutputPath>$(MSBuildThisFileDirectory)bin\$(Configuration)\$(TargetFramework)\</PluginOutputPath>
      <PluginTargetDir>$(MSBuildThisFileDirectory)..\..\core\PigeonPea.Console\bin\$(Configuration)\$(TargetFramework)\plugins\$(AssemblyName)\</PluginTargetDir>
    </PropertyGroup>
    <ItemGroup>
      <PluginFiles Include="$(PluginOutputPath)**\*.*" />
    </ItemGroup>
    <MakeDir Directories="$(PluginTargetDir)" />
    <Copy SourceFiles="@(PluginFiles)" DestinationFolder="$(PluginTargetDir)%(RecursiveDir)" SkipUnchangedFiles="true" />
  </Target>

</Project>
